            <thead>
                <th>FullName</th>
                <th>Department</th>
                <th></th>
                <th></th>
            </thead>

            <% users.forEach(function(user) { %>
                <tr>
                        <td><a href="/users/<%= user.username %>"><%= user.name() %></a></td>
                        <td><%= user.department %></td>        

                        <td><a href="/editStudent/<%= user._id%>"><i class="fa fa-pencil-square-o"></i></td></td>
                        <td><a href=""><i class="fa fa-trash"></i></a></td>
                    </tr>

