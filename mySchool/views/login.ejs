<% include _header %>
<br><br>
<div class="container">
<div class="row">
<div class="col-md-6 offset-md-3">
<div class="login-wrap">
<div class="login-html">
<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Log In</label>
<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
<div class="login-form">
<div class="sign-in-htm">
<br><br>
<form action="/login" method="post">
<div class="form-group group">
        <!-- <label for="name">Name:</label> -->
        <input type="text" class="form-control input" name="username" id="name" placeholder="Name">
    </div>
    <div class="form-group group">
            <!-- <label for="password">Password:</label> -->
            <input type="password" class="form-control input" name="password" id="password" placeholder="Password">
        </div>
<div class="group">
<input type="submit" class="button" value="Sign In">
</div>
</form>

<!-- <div class="hr"></div> -->
</div>
<div ng-app="myApp">
<div class="sign-up-htm" ng-controller="UserController as validate">
    <br>
    <form action="/signup" method="post" name="myForm" novalidate>
            <div class="form-group group">
                    <input type="text" class="form-control input" name="username" id="username" ng-model="validate.user.username" ng-maxlenght="250" ng-minlength="3" placeholder="Name" required>
                    <span ng-if="(myForm.username.$error.minlenght || 
                    myForm.username.$error.required) && myForm.username.$touched" class="error_message">
                    Your Name must be at least six (3) characters</span>
                    <span ng-if="(myForm.username.$error.maxlenght &&  
                    myForm.username.$touched)" class="error_message">
                    Your Name must be at most 250 characters</span>
                </div>
    
                <div class="form-group group">
                        <input type="text" class="form-control input" name="department" id="department" ng-model="validate.user.department" ng-minlength="2" ng-maxlenght="100" placeholder="Department" required>
                        <span ng-if="(myForm.department.$error.minlenght || 
                        myForm.department.$error.required) && myForm.department.$touched" class="error_message">
                        Your Name must be at least ten (2) characters</span>
                        <span ng-if="(myForm.department.$error.maxlenght && myForm.department.$touched)" class="error_message">
                        Your Name must be at least hundred (100) characters</span>
                    </div>
                    <div class="form-group group">
                            <input type="email" class="form-control input" name="email" id="email" ng-model="validate.user.email" placeholder="Email" required>
                            <span ng-if="myForm.email.$invalid && myForm.email.$touched" class="error_message">
                                Must be a valid Email: alc-2.0@google.com</span>
                        </div>
                    <div class="form-group group">
                            <input type="number" class="form-control input" name="level" id="level" step="100" max="500" min="100" ng-model="validate.user.level" placeholder="Level" required>
                            <span ng-if="myForm.level.$invalid && myForm.level.$touched" class="error_message">
                                    The level is between 100 to 500 in steps of 100</span>
                        </div>
    
                        <div class="form-group group">
                                <input type="password" class="form-control input" name="password" id="password" placeholder="Password" required>
                            </div>
                        
                    <div class="form-check form-check-inline group">
                            <label  class="form-check-label">
                                            <input class="form-check-input" type="radio" name="gender" id="male" value="male"> Male
                                        </label>
                        </div>
    
                        <div class="form-check form-check-inline group">
                            <label  class="form-check-label">
                                            <input class="form-check-input" type="radio" name="gender" id="female" value="female"> Female
                                        </label>
                        </div>
    
            
    <div class="form-group">
    <!-- <label for="sportclub" class="label">Sport Club:</label> -->
    <select class="form-control input" name="sportClub" ng-model="validate.user.sportClub">
            <option value="">Which club do you belong to?</option>
        <optgroup label="Sports">
                <option value="basketball">Basket Ball</option>
                <option value="football">Football</option>
                <option value="cricket">Cricket</option>
                <option value="table_tenis">Table tenis</option>
                <option value="badminton">Badminton</option>
        </optgroup>
        <optgroup label="religious">
                <option value="christian">Scripture Union</option>
                <option value="awana">AWANA</option>
                <option value="islam">Islamic Networks Group</option>
        </optgroup>
        <optgroup label="academic">
        <option value="JBL">Junior Business Leaders</option> 
        <option value="JETS">JETS Club</option>
        <option value="LDS">Literary and Debating Society</option>
        <option value="agric">The Young Agriculturist</option>
        <option value="arts">Arts Club</option>
        <option value="HomeMakers">The Home Makers Club</option>
        <option value="music">Music and Arts</option>
        </optgroup>
        <option value="others">Others</option>
    </select>
    </div>
            <div class="group">
                <!-- <input ng-disabled="myForm.$invalid" type="submit" class="button" value="Sign Up"> -->
                <button ng-disabled="myForm.$invalid" type="submit" class="btn btn-primary" style="display:block;width:100% !important;">Sign Up</button>
            </div>

    </form>

</div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
<br><br><br>
<% include _footer %>