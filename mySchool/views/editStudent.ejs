<% include _header %>
    <br><br>
    <h3 style="text-align:center;">Update Student</h3>
    <div class="container">
        <div class="row">
            <form action="/editStudent/<%= user._id %>" method="post" class="col-md-4 offset-md-4">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="username" value="<%= user.username || '' %>" placeholder="please enter your name">
                </div>

                <div class="form-group">
                    <label for="department">Department:</label>
                    <input type="text" class="form-control" id="department" name="department" value="<%= user.department || '' %>" placeholder="please enter your department">
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email || '' %>" placeholder="please enter your email">
                </div>
                <div class="form-group">
                    <label for="level">Level:</label>
                    <input type="number" class="form-control" id="level" max="500" min="100" step="100" name="level" value="<%= user.level || '' %>" placeholder="please enter your level">
                </div>

                <div class="form-group">
                    <label for="sportclub">Sport Club:</label>
                    <select class="form-control" name="sportClub">
       <option value=""><%= user.sportClub || 'Which sport club do you belong to?' %></option>
       <optgroup label="Sports">
        <option value="basketball">Basket Ball</option>
        <option value="football">Football</option>
        <option value="cricket">Cricket</option>
        <option value="table_tenis">Table tenis</option>
        <option value="badminton">Badminton</option>
</optgroup>
<optgroup label="religious">
        <option value="christian">Scripture Union</option>
        <option value="awana">AWANA</option>
        <option value="islam">Islamic Networks Group</option>
</optgroup>
<optgroup label="academic">
<option value="JBL">Junior Business Leaders</option> 
<option value="JETS">JETS Club</option>
<option value="LDS">Literary and Debating Society</option>
<option value="agric">The Young Agriculturist</option>
<option value="arts">Arts Club</option>
<option value="HomeMakers">The Home Makers Club</option>
<option value="music">Music and Arts</option>
</optgroup>
<option value="others">Others</option>
     </select>
                </div>

                <a href="/" class="btn btn-primary"><i class="fa fa-arrow-left"></i> List</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

    <% include _footer %>