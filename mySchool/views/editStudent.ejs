<% include _header %>
    <br><br>
    <h3 style="text-align:center;">Update Student</h3>
    <div class="container">
        <div class="row">
            <form action="/editStudent/<%= user._username%>" method="post" class="col-md-4 offset-md-4">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="username" value="<%= user.username || '' %>" placeholder="please enter your name">
                </div>

                <div class="form-group">
                    <label for="department">Department:</label>
                    <input type="text" class="form-control" id="department" name="department" value="<%= user.department || '' %>" placeholder="please enter your department">
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email || '' %>" placeholder="please enter your email">
                </div>
                <div class="form-group">
                    <label for="level">Level:</label>
                    <input type="number" class="form-control" id="level" max="500" min="100" step="100" name="level" value="<%= user.level || '' %>" placeholder="please enter your level">
                </div>

                <div class="form-group">
                    <label for="sportclub">Sport Club:</label>
                    <select class="form-control" name="sportClub">
       <option value=""><%= user.sportClub || 'Which sport club do you belong to?' %></option>
       <option value="Basketball">Basket Ball</option>
       <option value="Football">Football</option>
       <option value="Cricket">Cricket</option>
       <option value="Table Tenis">Table tenis</option>
       <option value="Badminton">Badminton</option>
     </select>
                </div>

                <a href="/" class="btn btn-primary"><i class="fa fa-arrow-left"></i> List</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

    <% include _footer %>